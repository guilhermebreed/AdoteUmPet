<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:rowCount="2"
    android:padding="28dp">

    <ImageView
        android:id="@+id/imagem_pet"
        android:layout_width="192px"
        android:layout_height="192px"
        android:layout_column="0"
        android:layout_rowSpan="2"
        android:layout_columnSpan="2"
        android:layout_row="0" />

    <TextView
        android:id="@+id/nome_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Pet"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_columnSpan="1"
        android:layout_gravity="left"/>
    <TextView
        android:id="@+id/tv_idadePet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Idade Aqui tio"
        android:layout_column="3"
        android:layout_row="0"
        android:layout_gravity="right"/>

    <TextView
        android:id="@+id/tv_racaPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="RaÃ§a aqui tio"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_gravity="left"/>

</GridLayout>